static uint32_t read_uint32(uint8_t *s) {
  return (s[0] << 24) | (s[1] << 16) | (s[2] << 8) | s[3];
}

static void write_uint32(uint8_t *d, uint32_t v) {
  *d++ = (uint8_t)(v >> 24);
  *d++ = (uint8_t)(v >> 16);
  *d++ = (uint8_t)(v >> 8);
  *d++ = (uint8_t)(v >> 0);
}

